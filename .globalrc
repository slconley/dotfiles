# shellcheck shell=bash

HOST=${HOST:=${HOSTNAME}}; HOST=${HOST%%.*}
[[ $HOST = ip-* ]] && HOST="$(hostnamectl 2>/dev/null | grep Pretty | cut -d: -f2 | cut -c2-)"
[[ -f $HOME/.nickname ]] && HOST=$(cat "$HOME/.nickname")

HIST_DTG="$(/bin/date '+%Y%m')"
HISTFILE=$HOME/.var/$HOST/sh.histfile.${HIST_DTG}
HISTFILE_GLOBAL=$HOME/.var/.global/sh.histfile

OSNAME="$(uname -s)"
OSREL="$(uname -r)"
OS="$OSNAME$OSREL"
PKG_CONFIG_PATH=/usr/share/pkgconfig
SHELL=${commands[zsh]:-${BASH}}
TEMP=$HOME/.tmp/$HOST
TMPDIR=$TEMP
VSC_TMP=$TEMP
XDG_RUNTIME_DIR=$TEMP

export SCREENDIR=$TEMP/.screen; [ -d $SCREENDIR ] || { mkdir -p $SCREENDIR; chmod 700 $SCREENDIR; }

export HIST_DTG HISTFILE HISTFILE_GLOBAL HOST OSNAME OSREL OSTYPE OS PKG_CONFIG_PATH SHELL TEMP TMPDIR XDG_RUNTIME_DIR VSC_TMP

PROFILES=$HOME/.files/profile.d
LPROFILES=$HOME/.local/profile.d

export LPROFILES PROFILES 

