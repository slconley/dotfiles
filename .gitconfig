[user]
  name = sean.conley
[core]
  autocrlf = input
  pager = less -S
  excludesfile = ~/.gitignore_global
[init]
  defaultBranch = main
[fetch]
  multiple = true
  parallel = 12
  prune = true
  prunetags = true
[push]
  default = current
[pull]
  default = current
  rebase = true
[rebase]
  autostash = true
[alias]
  difflist = !git diff --name-only
  permission-reset = !git diff -p -R --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
  sync = !git fetch --all && git pull && git push --all all
	lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[color]
  ui = true
[color "status"]
  header = "#999999"
  added = "#99cc99"
  changed = "#f2777a"
  untracked = "#ffcc66"
  branch = "#2d2d2d" "#6699cc"
  # Because the phrase "Detached HEAD" isn't unnerving enough
  nobranch = bold ul blink "#f99157"
[color "diff"]
  meta = "#515151"
  func = "#cc99cc"
  frag = "#66cccc"
  context = "#999999"
  old = "#b05555"
  new = "#bef2be"
[format]
  pretty = format:%h %Cblue%ai%Creset %<(33,trunc)%ae %Cblue%d%Creset %Cgreen%s%Creset
[diff "sopsdiff"]
  textconv = sops -d
[credential]
  helper = cache --timeout=43200
